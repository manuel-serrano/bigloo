(define (imap-message-copy! s num folder)
  (%imap-result 'imap-message-copy!
		s
		num
		(%imap-send s
			    (format "UID COPY ~A ~A" num folder)
			    void
			    void)
		(void)))

(define (imap-message-copy*! s num folder)
  (imap-message-copy! s (%imap-arg num ",") folder))

