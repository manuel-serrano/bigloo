;; ----------------------------------------------------------------------
;;	imap-message-exists? ...
;; ----------------------------------------------------------------------
(define (imap-message-exists? s uid)
  (let ((result #f))
    (%imap-send s
		(format "UID FETCH ~A UID" uid)
		(lambda (x)
		  (when (and (pair? x) (not (equal? (car x) "NO")))
		    (set! result #t)))
		void)
    result))

