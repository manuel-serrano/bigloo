#!/bin/sh
#*=====================================================================*/
#*    serrano/prgm/project/bigloo/flt/libuv/configure-libuv            */
#*    -------------------------------------------------------------    */
#*    Author      :  Manuel Serrano                                    */
#*    Creation    :  Mon Sep  7 09:49:25 2009                          */
#*    Last change :  Tue Nov 26 10:31:38 2024 (serrano)                */
#*    Copyright   :  2009-24 Manuel Serrano                            */
#*    -------------------------------------------------------------    */
#*    Ad-hoc configuration for the libuv.                              */
#*=====================================================================*/

# ending routine
oldpwd=`pwd`

end() {
  cd $oldpwd
}

trap end EXIT


export CC="$cc"
export CFLAGS="$cflags"
export LDFLAGS="$lflags"
export LC_ALL=C

cd libuv-$libuvversion
sh autogen.sh
./configure --libdir=$libdir/$fildir --includedir=$libdir/$fildir $libuvconfigureopt 2>&1 >> ../../configure.log \
  || (echo "configure libuv fail, see configure.log file." && exit 1) \
  || exit 1


								    

export CC="$cc"
export CFLAGS="$cflags"
export LDFLAGS="$lflags"
export LC_ALL=C

cd libuv-$libuvversion
sh autogen.sh
./configure --libdir=$libdir/$fildir --includedir=$libdir/$fildir $libuvconfigureopt 2>&1 >> ../../configure.log \
  || (echo "configure libuv fail, see configure.log file." && exit 1) \
  || exit 1
